@page "{id:int}"
@model SharpKatas.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Make" class="control-label"></label>
                <input asp-for="Car.Make" class="form-control" />
                <span asp-validation-for="Car.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BodyStyle" class="control-label"></label>
                <input asp-for="Car.BodyStyle" class="form-control" />
                <span asp-validation-for="Car.BodyStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Class" class="control-label"></label>
                <input asp-for="Car.Class" class="form-control" />
                <span asp-validation-for="Car.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Layout" class="control-label"></label>
                <input asp-for="Car.Layout" class="form-control" />
                <span asp-validation-for="Car.Layout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
